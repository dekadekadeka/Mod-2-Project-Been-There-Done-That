<div class="card">
    <div class="card-body">
    <h1 class="card-title">Log In</h1>

<p><%= alert %></p>
<%= form_for @user, url: login_path, method: 'POST' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Login", :class => 'btn btn-primary' %>
<% end %>
</div>
</div>
