<h1> Log a New Visit </h1><br>

<% if @visit.errors %>
    <% @visit.errors.full_messages.each do |msg| %>
    <%= msg %><br>
    <% end %>
<% end %>
<br>

<%= form_for(@visit) do |x| %>
    <%= x.label("Country Visited")%>
    <%= x.collection_select(:country_id, Country.all, :id, :name) %>
    <%= x.submit("Create Visit") %>
<% end %>